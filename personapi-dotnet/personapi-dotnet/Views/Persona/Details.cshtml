@model personapi_dotnet.Models.Entities.Persona
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Detalles de Persona</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h2 class="text-center mb-4">Detalles de Persona</h2>

        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Cédula</dt>
                    <dd class="col-sm-9">@Model.Cc</dd>

                    <dt class="col-sm-3">Nombre</dt>
                    <dd class="col-sm-9">@Model.Nombre</dd>

                    <dt class="col-sm-3">Apellido</dt>
                    <dd class="col-sm-9">@Model.Apellido</dd>

                    <dt class="col-sm-3">Género</dt>
                    <dd class="col-sm-9">@Model.Genero</dd>

                    <dt class="col-sm-3">Edad</dt>
                    <dd class="col-sm-9">@Model.Edad</dd>
                </dl>
            </div>
        </div>

        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </div>

</body>
</html>
