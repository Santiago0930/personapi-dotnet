@{
    Layout = null;
    ViewData["Title"] = "Menú Principal";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            margin: 0;
            background-color: #f8f9fa;
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: start;
            padding-top: 100px;
            font-family: Arial, sans-serif;
        }

        h1 {
            font-weight: bold;
            margin-bottom: 40px;
            text-align: center;
        }

        .button-group {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
            justify-content: center;
        }

            .button-group a {
                min-width: 200px;
            }
    </style>
</head>
<body>
    <h1>Menú Principal</h1>
    <div class="button-group">
        <a asp-controller="Persona" asp-action="Index" class="btn btn-primary">Gestionar Personas</a>
        <a asp-controller="Estudio" asp-action="Index" class="btn btn-primary">Gestionar Estudios</a>
        <a asp-controller="Profesion" asp-action="Index" class="btn btn-primary">Gestionar Profesiones</a>
        <a asp-controller="Telefono" asp-action="Index" class="btn btn-primary">Gestionar Teléfonos</a>
    </div>
</body>
</html>
