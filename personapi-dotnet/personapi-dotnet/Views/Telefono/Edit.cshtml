@model personapi_dotnet.Models.Entities.Telefono
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Editar Teléfono</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h2 class="mb-4">Editar Teléfono</h2>

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Num" />

            <div class="form-group mb-3">
                <label asp-for="Oper"></label>
                <input asp-for="Oper" class="form-control" />
                <span asp-validation-for="Oper" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Duenio"></label>
                <select asp-for="Duenio" class="form-control" asp-items="@(new SelectList(ViewBag.Personas, "Cc", "Nombre"))">
                    <option value="">Seleccione una persona</option>
                </select>
                <span asp-validation-for="Duenio" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
        </form>
    </div>

</body>
</html>
