@model IEnumerable<personapi_dotnet.Models.Entities.Telefono>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Gestión de Teléfonos</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h2 class="text-center mb-4">Gestión de Teléfonos</h2>

        <div class="d-flex justify-content-center gap-3 mb-4">
            <a asp-action="Create" class="btn btn-primary">Agregar Teléfono</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al Inicio</a>
        </div>

        <table class="table table-bordered table-striped">
            <thead class="table-dark text-center">
                <tr>
                    <th>Número</th>
                    <th>Operador</th>
                    <th>Dueño</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var telefono in Model)
                {
                    <tr>
                        <td>@telefono.Num</td>
                        <td>@telefono.Oper</td>
                        <td>@telefono.DuenioNavigation?.Nombre</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-num="@telefono.Num" class="btn btn-warning btn-sm me-1">Editar</a>
                            <a asp-action="Details" asp-route-num="@telefono.Num" class="btn btn-info btn-sm me-1">Ver</a>
                            <form asp-action="Delete" asp-route-num="@telefono.Num" method="post" style="display:inline">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar este teléfono?');">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
