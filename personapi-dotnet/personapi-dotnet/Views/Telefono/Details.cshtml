@model personapi_dotnet.Models.Entities.Telefono
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Detalle del Teléfono</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h2 class="mb-4">Detalle del Teléfono</h2>

        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Número</dt>
                    <dd class="col-sm-9">@Model.Num</dd>

                    <dt class="col-sm-3">Operador</dt>
                    <dd class="col-sm-9">@Model.Oper</dd>

                    <dt class="col-sm-3">Dueño</dt>
                    <dd class="col-sm-9">@Model.DuenioNavigation?.Nombre</dd>
                </dl>
            </div>
        </div>

        <div class="mt-3 text-center">
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </div>

</body>
</html>
