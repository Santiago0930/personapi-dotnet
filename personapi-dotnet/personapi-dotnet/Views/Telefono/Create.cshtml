@model personapi_dotnet.Models.Entities.Telefono
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Agregar Teléfono</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h2 class="mb-4">Agregar Teléfono</h2>

        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
        {
            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
        }

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                <label asp-for="Num"></label>
                <input asp-for="Num" class="form-control" />
                <span asp-validation-for="Num" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Oper"></label>
                <input asp-for="Oper" class="form-control" />
                <span asp-validation-for="Oper" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Duenio"></label>
                <select asp-for="Duenio" class="form-control" asp-items="@(new SelectList(ViewBag.Personas, "Cc", "Nombre"))">
                    <option value="">Seleccione una persona</option>
                </select>
                <span asp-validation-for="Duenio" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
        </form>
    </div>

</body>
</html>
