@model personapi_dotnet.Models.Entities.Estudio
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Detalle del Estudio</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h2 class="mb-4">Detalle del Estudio</h2>

        <div class="card">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Persona</dt>
                    <dd class="col-sm-9">@Model.CcPerNavigation?.Nombre</dd>

                    <dt class="col-sm-3">Profesión</dt>
                    <dd class="col-sm-9">@Model.IdProfNavigation?.Nom</dd>

                    <dt class="col-sm-3">Fecha</dt>
                    <dd class="col-sm-9">@Model.Fecha?.ToShortDateString()</dd>

                    <dt class="col-sm-3">Universidad</dt>
                    <dd class="col-sm-9">@Model.Univer</dd>
                </dl>
            </div>
        </div>

        <div class="mt-3 text-center">
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </div>

</body>
</html>
