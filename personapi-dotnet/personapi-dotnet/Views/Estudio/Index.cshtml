@model IEnumerable<personapi_dotnet.Models.Entities.Estudio>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Gestión de Estudios</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h2 class="text-center mb-4">Gestión de Estudios</h2>

        <div class="d-flex justify-content-center gap-3 mb-4">
            <a asp-action="Create" class="btn btn-primary">Agregar Estudio</a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Volver al Inicio</a>
        </div>

        <table class="table table-bordered table-striped">
            <thead class="table-dark text-center">
                <tr>
                    <th>Persona</th>
                    <th>Profesión</th>
                    <th>Fecha</th>
                    <th>Universidad</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var e in Model)
                {
                    <tr>
                        <td>@e.CcPerNavigation?.Nombre</td>
                        <td>@e.IdProfNavigation?.Nom</td>
                        <td>@e.Fecha?.ToShortDateString()</td>
                        <td>@e.Univer</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-ccPer="@e.CcPer" asp-route-idProf="@e.IdProf" class="btn btn-warning btn-sm me-1">Editar</a>
                            <a asp-action="Details" asp-route-ccPer="@e.CcPer" asp-route-idProf="@e.IdProf" class="btn btn-info btn-sm me-1">Ver</a>
                            <form asp-action="Delete" asp-route-ccPer="@e.CcPer" asp-route-idProf="@e.IdProf" method="post" style="display:inline">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Eliminar este estudio?');">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>
