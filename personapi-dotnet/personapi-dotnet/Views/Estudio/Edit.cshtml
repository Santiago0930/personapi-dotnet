@model personapi_dotnet.Models.Entities.Estudio
@{
    ViewData["Title"] = "Editar Estudio";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Editar Estudio</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <div class="container mt-5">
        <h2 class="mb-4 text-center">Editar Estudio</h2>

        <form asp-action="Edit" method="post" class="mx-auto" style="max-width: 500px;">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="CcPer" />
            <input type="hidden" asp-for="IdProf" />

            <div class="form-group mb-3">
                <label asp-for="Fecha" class="form-label">Fecha</label>
                <input asp-for="Fecha" type="date" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Univer" class="form-label">Universidad</label>
                <input asp-for="Univer" class="form-control" />
                <span asp-validation-for="Univer" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</body>
</html>
