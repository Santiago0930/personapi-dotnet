@model personapi_dotnet.Models.Entities.Estudio
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Crear Estudio</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h2 class="mb-4">Crear Estudio</h2>

        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
        {
            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
        }

        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                <label for="CcPer">Persona</label>
                <select asp-for="CcPer" class="form-control" asp-items="@(new SelectList(ViewBag.Personas, "Cc", "Nombre"))">
                    <option value="">Seleccione una persona</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label for="IdProf">Profesión</label>
                <select asp-for="IdProf" class="form-control" asp-items="@(new SelectList(ViewBag.Profesiones, "Id", "Nom"))">
                    <option value="">Seleccione una profesión</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Fecha"></label>
                <input asp-for="Fecha" type="date" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Univer"></label>
                <input asp-for="Univer" class="form-control" />
                <span asp-validation-for="Univer" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success mt-2">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary mt-2">Volver</a>
        </form>
    </div>

</body>
</html>
