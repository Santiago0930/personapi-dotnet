@model personapi_dotnet.Models.Entities.Profesion
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Editar Profesión</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">

    <div class="container mt-5">
        <h2 class="mb-4 text-center">Editar Profesión</h2>

        @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.Any(v => v.Errors.Count > 0))
        {
            @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
        }

        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Nom" />

            <div class="form-group mb-3">
                <label class="form-label">Nombre</label>
                <input class="form-control" value="@Model.Nom" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Des" class="form-label">Descripción</label>
                <input asp-for="Des" class="form-control" />
                <span asp-validation-for="Des" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>

</body>
</html>
